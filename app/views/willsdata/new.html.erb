<h1>New post</h1>

<%= form_with model: @post do |form| %>
  <div>
    <%= form.label :post_title %><br>
    <%= form.text_field :post_title %>
    <% @post.errors.full_messages_for(:post_title).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :post_body %><br>
    <%= form.text_area :post_body %><br>
    <% @post.errors.full_messages_for(:post_body).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
